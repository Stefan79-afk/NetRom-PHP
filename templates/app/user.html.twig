{% extends './base.html.twig' %}

{% block title %}
    {{ app.user.name }}
{% endblock %}

{% block body %}
    <header class="container-fluid container-lg text-center bg-primary p-5">
        <h1>Account Info</h1>
    </header>
    <main class="container text-left bg-secondary p-5" style="margin-top: 5%">
        <ul>
            <li class="bg-dark p-2"><h3>Name: {{ app.user.name }}</h3></li>
            <li class="bg-dark p-2"><h3>Email: {{ app.user.email }}</h3></li>
            <li class="bg-dark p-2"><h3>Address: {{ app.user.address }}</h3></li>
        </ul>

        <div>
            <a href="update/user={{ app.user.id }}" class="btn btn-success">Update Info</a>
            <a href="delete/user={{ app.user.id }}" class="btn btn-danger">Delete Account</a>
        </div>
    </main>
{% endblock %}