{% extends 'base.html.twig' %}

{% block title %}
    Update Station {{ id }}
{% endblock %}

{% block body %}
    <header class="container-fluid container-lg text-center bg-primary p-5">
        <h1>Create a new Station</h1>
    </header>

    <main class="container text-center p-5 mt-5">
        {{ form_start(form) }}

        {{ form_row(form.location) }}
        {{ form_row(form.name) }}
        {{ form_row(form.address) }}
        {{ form_end(form) }}
    </main>
{% endblock %}