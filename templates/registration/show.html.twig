{% extends 'base.html.twig' %}

{% block title %}
Booking ID:{{ item.id }}
{% endblock %}


{% block body %}

    <h1 class="container-fluid text-center p-5 bg-primary text-white">Booking ID: {{ item.id }}</h1>
    <ul class="container-fluid p-5 bg-secondary text-white">
        <li>Start Time: {{ item.startTime|date("F jS \\a\\t g:ia") }}</li>
        <li>Duration: {{ item.duration }} minutes</li>
        <li>
            <h3>Car </h3>
            <div class="container-fluid p-5 bg-info text-white">
            <ul>
                <li>ID: {{ item.carId }}</li>
                <li>Plate: {{ item.carId.plate }}</li>
                <li>Plug Type: {{ item.carId.plugType }}</li>
                <li>

                    <h3>User(s)</h3>

                    <div class="container-fluid bg-dark text-white">

                    {% for user in item.carId.getUsersArr %}
                        <ul>
                            <li>ID: {{ user.getId() }}</li>
                            <li>Name: {{ user.getName() }}</li>
                            <li>Email: {{ user.getEmail() }}</li>
                            <li>Authentication: {{ user.getAuth() }}</li>
                        </ul>
                    {% endfor %}
                    </div>
                </li>
            </ul>
            </div>
        </li>
        <li>
            <h3>Station</h3>
            <div class="container-fluid p-5 bg-info text-white">
            <ul>
                <li>ID: {{ item.plugId.getStation.getId }}</li>
                <li>Location: {{ item.plugId.getStation.getLocation }}</li>
                <li>Name: {{ item.plugId.getStation.getName }}</li>
                <li>
                    <h3>Plug(s)</h3>
                    <div class="container-fluid p-5 bg-dark text-white">
                    {% for plug in item.plugId.getStation.getPlugs %}
                    <ul>
                        <li>ID: {{plug.getId() }}</li>
                        <li>Status: {{ plug.getStatus() }}</li>
                        <li>Type: {{ plug.getType() }}</li>
                    </ul>
                        <hr>
                    {% endfor %}
                    </div>
                </li>
            </ul>
            </div>
        </li>
    </ul>

{% endblock %}
