{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="bg-primary p-5 text-center">Login</h1>

    <form class="was-validated p-5 text-center container" action="{{ path('app_login') }}" method="post">

        <div class="mb-3 mt-3 container" style="max-width: 50%">
            <label class="form-label" for="username">Email:</label>
            <input class="form-control bg-secondary text-white" type="text" id="username" name="_username" value="{{ last_username }}" required/>
        </div>

        <div class="mb-3 mt-3 container" style="max-width: 50%">
            <label class="form-label" for="password">Password:</label>
            <input class="form-control bg-secondary text-white" type="password" id="password" name="_password" required/>
        </div>

        <input type="hidden" name="_target_path" value="stations/Bucharest"/>

        <button class="btn btn-primary" type="submit">login</button>
    </form>

    <h5 class="text-center">Don't have an account? <a href="register">Make One</a></h5>
    <h5 class="text-center"><a href="email">Forgot your password?</a></h5>
{% endblock %}